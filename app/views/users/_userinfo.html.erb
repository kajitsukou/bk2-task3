<h1>User info</h1>
        <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

        <table class="table">
        	<tbody>
        		<tr>
        			<th>name</th>
        			<th><%= user.name %></th>
        		</tr>

        		<tr>
        			<th>introduction</th>
        			<th><%= user.introduction %></th>
        		</tr>
        	</tbody>
        </table>
      <div class="row">
        <%= link_to "" , edit_user_path(user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>