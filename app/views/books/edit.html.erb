<div class="row">
	<div class ="col-xs-6 col-xs-offset-3">
	<h1>Editing Book</h1>
	  <%= form_for(@book) do |f| %>
	  	<% if @book.errors.any? %>
	        <%= @book.errors.count %>error
	        <% @book.errors.full_messages.each do |message| %>
	        <%= message %>
	  <% end %>
	<% end %>

	<div class="row">
		<%= f.label :title %>
	 	 <%= f.text_field :title, class:"col-xs-12" %>
	</div>

	<div class="row">
	<%= f.label :body %>
	  <%= f.text_area :body ,class:"col-xs-12" %>
	</div>

	<div class="row">
	 <%= f.submit 'Update Book', class:"col-xs-12 btn btn-primary" %>
	</div>
	<% end %>
	<%= link_to "Show", book_path(@book) %> |
	<%= link_to "Back", books_path %>
	</div>
</div>